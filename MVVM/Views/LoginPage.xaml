<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.Views.LoginPage"
             xmlns:viewmodel="clr-namespace:MVVM.ViewModels"
             x:DataType="viewmodel:LoginViewModel"
             Title="LoginPage">
    <VerticalStackLayout>
        <Entry Placeholder="User Name"
               Text="{Binding Username}"></Entry>
        <Label Text="{Binding Username}"></Label>
        <Button Text="Login" Command="{Binding LoginCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>